<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="tag.version-1.0.0" author="words_memorization">
        <tagDatabase tag="version-1.0.0"/>
    </changeSet>

    <changeSet id="init-scheme" author="words_memorization">

        <createTable tableName="users">
            <column name="id" type="UUID" remarks="ID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="creation_time" type="TIMESTAMP" remarks="User's creation time">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)" remarks="User's name">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(255)" remarks="User's surname">
                <constraints nullable="false"/>
            </column>
            <column name="social_network_id" type="VARCHAR(255)" remarks="User's social network id">
                <constraints nullable="false"/>
            </column>
            <column name="social_network_type" type="VARCHAR(255)" remarks="User's network type">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>